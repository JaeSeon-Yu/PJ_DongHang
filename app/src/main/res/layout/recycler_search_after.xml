<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/ivSA"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSAName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="##장소명"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/ivSA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSALocation"/>

    <TextView
        android:id="@+id/tvSALocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#도시 #행정구역0"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/ivSA"
        app:layout_constraintTop_toBottomOf="@id/tvSAName"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvSATag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#태그#태그"
        android:textSize="15dp"
        android:textColor="#0000FF"
        app:layout_constraintLeft_toRightOf="@+id/ivSA"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>